{
  
  "variables": {
    "vsphere_user": "{{ env `vsphere_user`}}",
	"vsphere_pass": "{{ env `vsphere_pass`}}"
  },

  
  "builders": [
    {
      "type": "vsphere-iso",
      "convert_to_template": "true",

      "vcenter_server":      "192.168.0.11",
      "username":            "{{user `vsphere_user`}}",
      "password":            "{{user `vsphere_pass`}}",
      "insecure_connection": "true",
	  "datacenter":          "Homelab",

      "vm_name":    "Kali-2019.1",
	  "datastore":  "SSHD-2TB",
      "host":       "192.168.0.10",
	  "folder":     "Templates",

      "guest_os_type":  "debian9_64Guest",

      "communicator": "ssh",
      "ssh_username": "root",
      "ssh_password": "packer123!",

      "CPUs":            1,
      "RAM":             4096,
      "RAM_reserve_all": true,

      "disk_controller_type":  "pvscsi",
      "disk_size":             32768,
      "disk_thin_provisioned": true,

      "network_card": "vmxnet3",
      "network":      "VM Network",

      "iso_paths": [
        "[SSHD-2TB] ISOs/kali-linux-2019.1-amd64.iso"
      ],
      
      "http_directory": "{{template_dir}}/answer-files/kali/",
      "http_ip": "192.168.0.101",
      
      "boot_command": [
        "<esc><wait>",
        "/install/vmlinuz",
        " initrd=/install/initrd.gz",
        " hostname=kali",
        " auto=true",
        " interface=auto",
        " domain=''",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        "<enter>"
      ],
      "boot_wait": "10s"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "ls /"
      ]
    }
  ]
}
