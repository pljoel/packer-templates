{
  
  "variables": {
    "vsphere_user": "{{ env `vsphere_user`}}",
	"vsphere_pass": "{{ env `vsphere_pass`}}"
  },

  
  "builders": [
    {
      "type": "vsphere-iso",
      "convert_to_template": "true",

      "vcenter_server":      "192.168.0.11",
      "username":            "{{user `vsphere_user`}}",
      "password":            "{{user `vsphere_pass`}}",
      "insecure_connection": "true",
	  "datacenter":          "Homelab",

      "vm_name":    "Ubuntu18-Server",
	  "datastore":  "SSHD-2TB",
      "host":       "192.168.0.10",
	  "folder":     "Templates",

      "guest_os_type":  "ubuntu64Guest",

      "communicator": "ssh",
      "ssh_username": "root",
      "ssh_password": "packer123!",

      "CPUs":            1,
      "RAM":             4096,
      "RAM_reserve_all": true,

      "disk_controller_type":  "pvscsi",
      "disk_size":             32768,
      "disk_thin_provisioned": true,

      "network_card": "vmxnet3",
      "network":      "VM Network",

      "iso_paths": [
        "[SSHD-2TB] ISOs/ubuntu-18.04.2-server-amd64.iso"
      ],

      "floppy_files": [
		"{{template_dir}}/answer-files/ubuntu18/preseed.cfg"
      ],
      
      "boot_command": [
        "<enter><wait><f6><wait><esc><wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz",
        " initrd=/install/initrd.gz",
        " priority=critical",
        " locale=en_US",
        " file=/media/preseed.cfg",
        "<enter>"
      ],
      "boot_wait": "10s"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "ls /"
      ]
    }
  ]
}
