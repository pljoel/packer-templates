{
  
  "variables": {
    "vsphere_user": "{{ env `vsphere_user`}}",
	"vsphere_pass": "{{ env `vsphere_pass`}}"
  },

  
  "builders": [
    {
      "type": "vsphere-iso",
      "convert_to_template": "true",

      "vcenter_server":      "192.168.0.11",
      "username":            "{{user `vsphere_user`}}",
      "password":            "{{user `vsphere_pass`}}",
      "insecure_connection": "true",
	  "datacenter":          "Homelab",

      "vm_name":    "WS2016",
	  "datastore":  "SSHD-2TB",
      "host":       "192.168.0.10",
	  "folder":     "Templates",

      "guest_os_type":  "windows9Server64Guest",

      "communicator":   "winrm",
      "winrm_username": "Administrator",
      "winrm_password": "packer123!",

      "CPUs":            2,
      "RAM":             4096,
      "RAM_reserve_all": true,

      "disk_controller_type":  "pvscsi",
      "disk_size":             32768,
      "disk_thin_provisioned": true,

      "network_card": "vmxnet3",
      "network":      "VM Network",

      "iso_paths": [
        "[SSHD-2TB] ISOs/w2016_standard64.iso",
        "[SSHD-2TB] ISOs/VMware-Tools-10.3.5/vmtools/windows.iso"
      ],

      "floppy_files": [
        "{{template_dir}}/setup/",
		"{{template_dir}}/answer-files/ws2016/"
      ],
      "floppy_img_path": "[SSHD-2TB] ISOs/VMware-Tools-10.3.5/floppies/pvscsi-Windows8.flp"
    }
  ],

  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "dir c:\\"
      ]
    }
  ]
}
